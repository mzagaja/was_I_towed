<h1>Was I towed?</h1>
<%= form_tag('static_pages/towed', method: "get") do %>
  <%= text_field_tag(:q, nil, placeholder: "License Plate") %>
  <%= submit_tag("Click to find out!", class: "button expand") %>
<% end %>
<% unless logged_in? %>
  <%= link_to "Click to Text or E-Mail Me if My Car is Towed", signup_path, class: "button expand" %>
<% end %>

